<div class="dashboard">
  <div class="row">
    <%= render 'shared/sidenav' %>

    <div class="col-sm-10 pl-0">
      <div class="row p-4">
        <div class="col p-3 mx-2 dashboard-stats">
          <h6>BOOKS READ THIS MONTH</h6>
          <h1>0</h1>
        </div>
        <div class="col p-3 mx-2 dashboard-stats">
          <h6>AVERAGE BOOKS READ PER MONTH</h6>
          <h1>0</h1>
        </div>
        <div class="col p-3 mx-2 dashboard-stats">
          <h6>TOTAL BOOKS READ</h6>
          <h1>0</h1>
        </div>
      </div>

      <div class="row px-4 pb-4">
        <div class="col dashboard-table p-3 mx-2">
          <div class="d-flex justify-content-between">
            <h6>YOUR BOOK CARDS</h6>
            <%= link_to "+ book card", new_user_card_path(current_user), class: "button-platinum mr-2" %>
          </div>
          <% if @book_cards.empty? %>
            <p>No books yet! Hurry to read one!</p>
          <% else %>
            <table class="table mt-5">
              <thead>
                <tr>
                  <th scope="col">#</th>
                  <th scope="col">TITLE</th>
                  <th scope="col">AUTHOR</th>
                  <th scope="col">BEGIN DATE</th>
                  <th scope="col">END DATE</th>
                  <th scope="col">RATING</th>
                </tr>
              </thead>
              <tbody>
                <% @book_cards.each_with_index do |card, index| %>
                  <tr>
                    <th scope="row"><%= index %></th>
                    <td>
                      <%= link_to user_card_path(current_user, card) do %>
                        <%= card.title %>
                      <% end %>
                    </td>
                    <td><%= card.author %></td>
                    <td><%= card.begin %></td>
                    <td><%= card.end %></td>
                    <td><%= card.rating %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

