<div class="dashboard">
  <div class="row">
    <%= render 'shared/sidenav' %>

    <div class="col-sm-10 pl-0">
      <div class="row p-4">
        <div class="col p-3 mx-2 dashboard-item">

        </div>
        <div class="col p-3 mx-2 dashboard-item">
          <div>
            <h2>Brief</h2>
            <% if @card.description.empty? %>
              <p>No description yet</p>
            <% else %>
              <p><%= @card.description %></p>
            <% end %>
          </div>
          <div>
            <h2>Your Rating</h2>
            <% if @card.rating.nil? %>
              <p>No rating yet</p>
            <% else %>
              <h4><%= @card.rating %></h4>
            <% end %>
          </div>
        </div>
      </div>


      <div class="row px-4 pb-4">
        <div class="col dashboard-item p-3 mx-2">
          <div class="d-flex justify-content-between">
            <h2>Notes & Quotes</h2>
            <%= link_to "+ book note", new_card_note_path(@card), class: "button-platinum mr-2" %>
          </div>
          <div class="mt-5">
            <% if @card_notes.empty? %>
              <p>No notes yet</p>
            <% else %>
              <% @card_notes.each do |note| %>
                <div class="note-card p-4">
                  <h6 class="mb-3">page <%= note.page %></h6>
                  <p class="font-style-italic m-0 mb-1">"<%= note.quote %>"</p>
                  <p class="m-0 mb-5"><%= note.remark %></p>

                  <p class="m-0"><%= link_to "Edit", edit_note_path(note) %> / <%= link_to "Delete", note_path(note), method: :delete, data: { confirm: "Are you sure?"} %></p>
                </div>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
